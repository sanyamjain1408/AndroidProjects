<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/openwebpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="194dp"
            android:layout_marginEnd="135dp"
            android:text="Open web page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/openphonecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Open phone call"
            app:layout_constraintStart_toStartOf="@+id/openwebpage"
            app:layout_constraintTop_toBottomOf="@+id/openwebpage" />

        <Button
            android:id="@+id/opencamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:text="Open Camera"
            app:layout_constraintStart_toStartOf="@+id/openphonecall"
            app:layout_constraintTop_toBottomOf="@+id/openphonecall" />

        <EditText
            android:id="@+id/inputtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:hint="Enter Your Text"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opencamera" />

        <Button
            android:id="@+id/textsharebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Text Share Button"
            app:layout_constraintEnd_toEndOf="@+id/inputtext"
            app:layout_constraintStart_toStartOf="@+id/inputtext"
            app:layout_constraintTop_toBottomOf="@+id/inputtext" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>